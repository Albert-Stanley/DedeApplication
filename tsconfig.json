{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "tailwind.config": ["./tailwind.config.js"]
    }
  },
  "include": [
    "env.d.ts",
    "src/app/**/*",
    "node_modules/react-native-dotenv",
    "nativewind-env.d.ts",
    "src/services",
    "src/_layout.tsx",
    "src/services",
    "src/auth",
    "src/screens"
  ]
}
